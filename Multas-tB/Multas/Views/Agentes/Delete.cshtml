@model Multas.Models.Agentes

@{
    ViewBag.Title = "Agentes";
}

<h2>Apagar</h2>

<h3>Tem a certeza que quer apagar este agente</h3>
<div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" }) @*HTML Helper para apresentar mostrar as mensagens de erro*@
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Esquadra)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Esquadra)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Fotografia)
        </dt>

        <dd>
            @*@Html.DisplayFor(modelItem => item.Fotografia)*@
            <a href="~/imagens/@Model.Fotografia" target="_blank">
                <img src="~/imagens/@Model.Fotografia" width="50" height="37" />
            </a>
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Apagar" class="btn btn-danger" /> |
            @Html.ActionLink("Regressar ao Inicio", "Index")
        </div>
    }
</div>
